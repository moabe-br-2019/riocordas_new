// Esta p√°gina deve ser renderizada no servidor (SSR) para acessar a API em tempo real
// Desabilita pre-rendering para que a API seja chamada din√¢micamente
export const prerender = false;

import Layout from '../layouts/Layout.astro';

interface PackageSample {
  id: number;
  name: string;
  image: any;
  [key: string]: any;
}

interface PricingItem {
  id: number;
  year: number;
  dueto: string;
  trio: string;
  quarteto: string;
  quinteto: string;
  packageSample: PackageSample | null;
  [key: string]: any;
}

interface ApiResponse {
  success: boolean;
  pricing: PricingItem[];
  package?: any;
  error?: string;
  message?: string;
}

// Obter ano da URL ou usar o ano atual
const url = new URL(Astro.request.url);
const yearParam = url.searchParams.get('ano');
const currentYear = new Date().getFullYear();
const selectedYear = yearParam ? parseInt(yearParam) : currentYear;

let pricingData: any[] = [];
let allPricingData: any[] = [];
let error = '';
let availableYears: number[] = [];

try {
  // Buscar dados da API
  // Durante SSR em desenvolvimento: usa localhost
  // Durante SSR em produ√ß√£o: usa a URL do site
  let apiUrl: string;

  // Detecta se est√° em desenvolvimento (SSR local) ou produ√ß√£o
  const isDev = process.env.NODE_ENV !== 'production';

  if (isDev) {
    // Em desenvolvimento, sempre usa localhost para SSR funcionar
    // Nota: durante SSR, o Astro roda em um servidor Node local
    apiUrl = 'http://localhost:4330/api/valores';
  } else {
    // Em produ√ß√£o, usa a URL do site configurada
    const siteUrl = import.meta.env.SITE || 'https://riocordas.com.br';
    apiUrl = new URL('/api/valores', siteUrl).href;
  }

  console.log('üìå Fetching pricing data from:', apiUrl);
  let apiResponse = await fetch(apiUrl);

  if (!apiResponse.ok) {
    const errorText = await apiResponse.text();
    console.error('API error response:', errorText);
    throw new Error(`API error: ${apiResponse.statusText} - ${errorText.substring(0, 200)}`);
  }

  const contentType = apiResponse.headers.get('content-type');
  if (!contentType?.includes('application/json')) {
    const bodyText = await apiResponse.text();
    console.error('Invalid content-type:', contentType, 'Body:', bodyText.substring(0, 200));
    throw new Error(`Invalid response format: expected JSON but got ${contentType}`);
  }

  const data: ApiResponse = await apiResponse.json();

  if (data.success) {
    allPricingData = data.pricing || [];
    console.log('‚úÖ Data loaded successfully. Years available:', [...new Set(allPricingData.map((item: PricingItem) => item.year))]);
  } else {
    error = data.message || data.error || 'Unknown error occurred';
    console.error('API returned error:', error);
  }
} catch (err) {
  error = err instanceof Error ? err.message : 'Erro ao carregar dados';
  console.error('‚ùå Error fetching data:', error);
}

// Extrair anos dispon√≠veis e filtrar pelos dados do ano selecionado
if (allPricingData.length > 0) {
  // Converter "Ano" string para number para compara√ß√£o correta
  const yearsSet = new Set<number>();
  allPricingData.forEach((item: any) => {
    const year = parseInt(item.Ano || item.year || '0');
    if (year > 0) yearsSet.add(year);
  });
  availableYears = Array.from(yearsSet).sort((a, b) => a - b);

  // Filtrar pelo ano selecionado
  pricingData = allPricingData.filter((item: any) => {
    const itemYear = parseInt(item.Ano || item.year || '0');
    return itemYear === selectedYear;
  });

  // Se n√£o houver dados para o ano selecionado, usar o ano mais recente
  if (pricingData.length === 0 && availableYears.length > 0) {
    const latestYear = availableYears[availableYears.length - 1];
    console.log(`‚ÑπÔ∏è No data for year ${selectedYear}, showing latest year ${latestYear}`);
    pricingData = allPricingData.filter((item: any) => {
      const itemYear = parseInt(item.Ano || item.year || '0');
      return itemYear === latestYear;
    });
  }
}
---

<Layout
  title="Valores - Rio Cordas"
  description="Tabela de valores dos pacotes de contrata√ß√£o da Rio Cordas"
>
  <!-- Meta tags para bloquear indexa√ß√£o pelo Google -->
  <meta name="robots" content="noindex, nofollow" slot="head">
  <meta name="googlebot" content="noindex, nofollow" slot="head">

  <div class="valores-container">
    <div class="valores-header">
      <h1>Tabela de Valores</h1>
      <p class="subtitle">Conhe√ßa os valores e pacotes dispon√≠veis para contrata√ß√£o</p>
    </div>

    {error && (
      <div class="error-message">
        <p>Erro ao carregar os dados: {error}</p>
      </div>
    )}


    {!error && pricingData.length > 0 && (
      <div class="pricing-section">
        <h2>Valores - Ano {selectedYear}</h2>
        <div class="cards-grid">
          {pricingData.map((pricingItem: any) => {
            // Extrair dados do pacote de amostra
            const packageData = pricingItem.packageSample;

            // Pre√ßos
            const priceRegular = pricingItem['Pre√ßo'] || pricingItem.Pre√ßo || '0';
            const pricePromo = pricingItem['Pre√ßo promocional'] || pricingItem['Pre√ßo promocional'];

            // Extrair URL da imagem (usa a vers√£o original em alta qualidade)
            const imageUrl = packageData?.File?.[0]?.url || '/placeholder.jpg';
            const packageName = packageData?.Name || 'Pacote';
            const packageNotes = packageData?.Notes || '';

            return (
              <div class="pricing-card">
                <div class="card-image">
                  <img
                    src={imageUrl}
                    alt={packageName}
                  />
                </div>

                <div class="card-content">
                  <h3 class="card-title">{packageName}</h3>

                  {packageNotes && (
                    <p class="card-description">{packageNotes}</p>
                  )}

                  <div class="card-price">
                    <div class="price-main">
                      <span class="price-label">A partir de</span>
                      <span class="price-value">R$ {pricePromo || priceRegular}</span>
                    </div>
                    {pricePromo && (
                      <div class="price-crossed">R$ {priceRegular}</div>
                    )}
                  </div>

                  <a href="/formulario-contrato" class="btn-contact">Solicitar Or√ßamento</a>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    )}

    {!error && pricingData.length === 0 && (
      <div class="no-data-message">
        <p>Nenhum dado dispon√≠vel para o ano {selectedYear}</p>
        {availableYears.length > 0 && (
          <p class="suggestion">Tente outro ano: {availableYears.join(', ')}</p>
        )}
      </div>
    )}
  </div>
</Layout>

